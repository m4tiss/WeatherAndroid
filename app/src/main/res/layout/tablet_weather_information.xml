<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="City name"
                android:padding="20sp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_corner_background"
                />
            <Button
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="15sp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_weight="4"/>
            <ImageView
                android:id="@+id/refreshIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="32dp"
                android:src="@drawable/refresh_icon"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cityTextView"
                    android:text="London"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    tools:ignore="MissingConstraints"
                    android:layout_weight="2"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/heartIcon"
                    android:src="@drawable/noheart"
                    android:gravity="center"
                    android:padding="10sp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/nodata"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/temperatureTextView"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="80dp"
                android:text="16Â°"
                tools:ignore="MissingConstraints"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coordinatesTextView"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Coordinates: -"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weatherTextView"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Weather: -"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pressureTextView"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Pressure: -"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timeTextView"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="Time: -"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="25sp"
                    android:id="@+id/windTextView"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Wind"
                    android:layout_weight="2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="18sp"
                    android:id="@+id/windSpeedTextView"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Speed: -"
                    android:layout_weight="2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="18sp"
                    android:id="@+id/windDegTextView"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Degree: -"
                    android:layout_weight="2"/>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/windImageView"
                android:src="@drawable/wind"
                android:padding="30sp"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/visibilityImageView"
                android:layout_weight="1"
                android:padding="30sp"
                android:src="@drawable/novisibility"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/visibilityTextView"
                android:gravity="center"
                android:text="Visibility\n-"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/humidityTextView"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Humidity: -"
            android:layout_weight="2"/>



    </LinearLayout>

</LinearLayout>